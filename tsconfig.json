{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "outDir": "./dist/out-tsc",
    "paths": {
      "@angular/*": ["../node_modules/@angular/*"],
      "@core/*": ["./app/core/*"],
      "@shared/*": ["./app/shared/*"]
    },
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"]
  }
}
